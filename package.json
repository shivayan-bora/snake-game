{
	"name": "snake-game",
	"version": "1.0.0",
	"description": "A classic Snake game built for the terminal using React and Ink",
	"license": "MIT",
	"author": {
		"name": "Shivayan Bora",
		"email": "bora.shivayan@gmail.com"
	},
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"keywords": [
		"snake",
		"game",
		"terminal",
		"cli",
		"react",
		"ink",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shivayan-bora/snake-game.git"
	},
	"bugs": {
		"url": "https://github.com/shivayan-bora/snake-game/issues"
	},
	"homepage": "https://github.com/shivayan-bora/snake-game#readme",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
